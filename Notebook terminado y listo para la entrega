        "# LÍNEA EVALUABLE, NO RENOMBRAR VARIABLES\n",
        "kivaAgrupadoDF = None\n",
        "# YOUR CODE HERE\n",
        "kivaAgrupadoDF = kivaTiemposDF.groupBy(\"country\").pivot(\"sector\").agg(F.round(F.mean(\"dias_aceptacion\"), 2))\n",
        "\n",
        "# Calculate global average and add as a new column\n",
        "sector_cols = [col for col in kivaAgrupadoDF.columns if col != 'country']\n",
        "kivaAgrupadoDF = kivaAgrupadoDF.withColumn(\"transcurrido_global\", F.round(sum(kivaAgrupadoDF[col] for col in sector_cols) / len(sector_cols), 2)).orderBy(F.desc(F.col(\"transcurrido_global\")))\n",
        "kivaAgrupadoDF.show()"
      ]
