        "# LÍNEA EVALUABLE, NO RENOMBRAR LAS VARIABLES\n",
        "\n",
        "# Seccion para conectar al adls\n",
        "api_key = \"\"\n",
        "storage_account_name = \"masterucmdata\"\n",
        "container_name = \"sparktask\"\n",
        "\n",
        "from pyspark.sql import SparkSession\n",
        "spark = SparkSession.builder.appName(\"KivaData\") \\\n",
        "    .config(f\"fs.azure.account.key.{storage_account_name}.dfs.core.windows.net\", api_key) \\\n",
        "    .config(\"spark.jars.packages\", \"org.apache.hadoop:hadoop-azure:3.3.1\") \\\n",
        "    .getOrCreate()\n",
        "\n",
        "adls_path_to_csv = f\"abfss://{container_name}@{storage_account_name}.dfs.core.windows.net/data/kiva_loans.csv\"\n",
        "# find de la seccion para conectar al adsl\n",
        "\n",
        "kivaRawDF = spark.read.option(\"header\", True)\\\n",
        "    .option(\"inferSchema\", False)\\\n",
        "    .option(\"quote\", \"\\\"\")\\\n",
        "    .option(\"escape\", \"\\\"\")\\\n",
        "    .option(\"mode\", \"DROPMALFORMED\")\\\n",
        "    .csv(adls_path_to_csv)\n",
        "\n",
        "# Descomentar estas líneas para calcular la lista de columnas que sí deben tenerse en cuenta para quitar nulos. Después\n",
        "# tendrás que utilizar dicha lista en la operación que elimina los nulos\n",
        "columnasExceptoTags = kivaRawDF.columns\n",
        "columnasExceptoTags.remove(\"tags\")\n",
        "kivaRawNoNullDF = None\n",
        "# YOUR CODE HERE\n",
        "kivaRawNoNullDF = kivaRawDF.na.drop(subset=columnasExceptoTags)\n",
        "kivaRawNoNullDF.show()"
      ]
